<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#AD1457"/> <!-- Darker pink when pressed -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#880E4F"/> <!-- Dark outline -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D81B60"/> <!-- Bright pink -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="#C2185B"/> <!-- Medium outline -->
        </shape>
    </item>

</selector>
